// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["base", "tests"]
}

model User {
  id       String         @id @default(uuid())
  username String
  password String
  groups   GroupsOfUser[]

  @@schema("base")
}

model Groups {
  id            String         @id @default(uuid())
  groupName     String
  levelOfAccess Int
  users         GroupsOfUser[]

  @@schema("base")
}

model GroupsOfUser {
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  groups     Groups   @relation(fields: [groupId], references: [id])
  groupId    String
  assignedAt DateTime @default(now())
  assignedBy String

  @@id([userId, groupId])
  @@schema("base")
}

model TestUser {
  id       String             @id @default(uuid())
  username String
  password String
  groups   TestGroupsOfUser[]

  @@schema("tests")
}

model TestGroups {
  id            String             @id @default(uuid())
  groupName     String
  levelOfAccess Int
  users         TestGroupsOfUser[]

  @@schema("tests")
}

model TestGroupsOfUser {
  user       TestUser   @relation(fields: [userId], references: [id])
  userId     String
  groups     TestGroups @relation(fields: [groupId], references: [id])
  groupId    String
  assignedAt DateTime   @default(now())
  assignedBy String

  @@id([userId, groupId])
  @@schema("tests")
}
